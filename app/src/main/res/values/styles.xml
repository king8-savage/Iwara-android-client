<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/surfaceDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="shapeAppearanceSmallComponent">@style/CustomCutSmallShapeAppearance</item>
        <item name="shapeAppearanceMediumComponent">@style/CustomCutMediumShapeAppearance</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomCutLargeShapeAppearance</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>
    <style name="LaunchTheme" parent="BaseAppTheme">
        <item name="android:windowEnterAnimation">@anim/fade_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_anim</item>
    </style>
    


</resources>
