<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/surfaceDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="shapeAppearanceSmallComponent">@style/CustomCutSmallShapeAppearence</item>
        <item name="shapeAppearanceMediumComponent">@style/CustomCutMediumShapeAppearence</item>
        <item name="shapeAppearanceLargeComponent">@style/CustomCutLargeShapeAppearence</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">

    </style>
    <style name="LaunchTheme" parent="BaseAppTheme">
        <item name="android:windowEnterAnimation">@anim/fade_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_anim</item>
    </style>
    
    <style name="CustomCutSmallShapeAppearence">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/cut_4dp</item>
    </style>
    <style name="CustomCutMediumShapeAppearence">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/cut_8dp</item>
    </style>
    <style name="CustomCutLargeShapeAppearence">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/cut_16dp</item>
    </style>

    <style name="dialog_null" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/dialog_null_anim</item>
    </style>
</resources>
