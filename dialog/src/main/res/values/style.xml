    <style name="BottomDialog" parent="dialog_null">
        <item name="android:windowAnimationStyle">@style/dialog_anim</item>
    </style>

    <style name="dialog_null_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottomtop_enter</item>
        <item name="android:windowExitAnimation">@anim/bottomtop_exit</item>
    </style>

    <style name="dialog_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_bottom</item>
    </style>

    <style name="CustomCutSmallShapeAppearence">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/cut_small</item>
    </style>

    <style name="CustomCutMediumShapeAppearence">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/cut_medium</item>
    </style>

    <style name="CustomCutLargeShapeAppearence">
