<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/item_padding_start"
    android:paddingEnd="@dimen/item_padding_end"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/bg_menu_item_click"
    >

    <ImageView
        android:layout_width="@dimen/item_img_height"
        android:layout_height="@dimen/item_img_width"
        android:id="@+id/img_icon"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/item_img_gray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_icon"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        android:gravity="center_vertical"
        android:textColor="@color/primaryText"
        android:paddingStart="@dimen/item_title_padding_start"
        android:paddingEnd="0dp"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:text="@string/point"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/h6"
        android:textColor="@color/primaryText"
        android:visibility="gone"
        android:id="@+id/text_point"
        app:layout_constraintStart_toEndOf="@id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textColor="@color/primaryText"
        style="@style/TextAppearance.MdcTypographyStyles.Subtitle1"
        android:id="@+id/text_value"
        app:layout_constraintStart_toEndOf="@id/text_point"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>