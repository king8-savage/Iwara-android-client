<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/video_contentt_parent"
    android:clipChildren="false"
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/surface_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <RelativeLayout
        android:id="@+id/thumb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/textColor_black_medium"
        android:id="@+id/layout_top"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_down_24dp"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btn_down"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="@dimen/subtitle2"
            android:letterSpacing="@dimen/subtitle2_ls"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_share_24dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_share"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more_vert_24dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_more"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/layout_bottom"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:text="00:00"
            android:textColor="@color/text"
            android:gravity="center_vertical"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:text="00:00"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/fullscreen"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_fullscreen_black_24dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            />

    </LinearLayout>





    <ImageView
        android:id="@+id/start"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_play_arrow_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:maxWidth="300dp"
        android:textColor="@color/text"
        android:textSize="14sp"
        android:textAlignment="center"
        android:id="@+id/text_error_info"
        android:visibility="visible"
        />

    <ProgressBar
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loading"
        android:visibility="gone"
        android:progressTint="@color/colorAccent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>